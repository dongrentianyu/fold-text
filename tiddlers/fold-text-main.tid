\define actions()
<$action-setfield $tiddler="$:/state/fold-text/main" text=<<event-navigateTo>> />
\end

<$messagecatcher $tm-navigate=<<actions>> >
<$button class="fold-text fold-text-content-select">
<$action-setfield $tiddler="$:/state/fold-text/main" text={{{ [!is[system]sort[title]] -[tag[fold-text]] -[fold-text[no]] -[tag[fold-text-save-file]] +[after{$:/state/fold-text/main}] }}} />

<div class="fold-text-content" >

<%if [{$:/state/fold-text/main}trim[]!is[blank]] %>

<$transclude tiddler={{{ [[$:/state/fold-text/main]get[text]] }}} mode="block"/>

<%else%>

<$transclude tiddler="fold-text-last" mode="block"/>

<%endif%>
</div>
</$button>
</$messagecatcher>