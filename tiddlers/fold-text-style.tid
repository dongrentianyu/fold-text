/* 卡片样式 */
.fold-text {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
    align-content: stretch;
    width: 100%;
    height: 450px;
    overflow: auto; /* 当内容溢出时显示滚动条 */
    /* 隐藏滚动条（适用于 WebKit 浏览器，如 Chrome、Safari） */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
    background: black;
    color: white;
    border-radius: 10px;
    padding: 20px;
}

/* 隐藏 WebKit 浏览器的滚动条 */
.fold-text::-webkit-scrollbar {
    display: none;
}
.fold-text-content{
    text-align: left;
    font-size: 28px;
}
.fold-text-button{
  font-size: 48px;
}

<!-- 下面是自定义的弹窗样式 -->

.fold-text-modal .tc-modal,
.fold-text-modal .tc-modal-header,
.fold-text-modal .tc-modal-body,
.fold-text-modal .tc-modal-footer {
  border: none;
  background-color: #f5f5f5;
}.fold-text-modal .tc-modal-header {
	border-radius: 10px 10px 0 0;
}.fold-text-modal .tc-modal {
	border-radius: 10px;
}.fold-text-modal .tc-modal-footer {
	border-radius: 0 0 10px 10px;
}@media (max-width: 500px) {
.fold-text-modal .tc-modal {
	width: 95% !important;
}
}.fold-text-modal .tc-modal-backdrop {
  cursor: pointer;
}
.fold-text-modal .tc-modal {
    width: 90vw;
	height: 80vh;
	top: 50%;
	bottom: 20%;
	max-height: 80vh;
    border-radius: 10px;
}.fold-text-modal .tc-modal-footer {
  display: none;
}

@media (min-width: 55em) {
.fold-text-modal .tc-modal-body {
        overflow-y: auto;
        max-height: 80vh;
    }
}