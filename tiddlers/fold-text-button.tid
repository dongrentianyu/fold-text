title: fold-text-button

<$button tooltip="回到上一节" aria-label="上一节" >
	<%if [{$:/state/fold-text/main}match{fold-text-default}] %>
		<$action-sendmessage $message="tm-notify" $param="fold-text-button-notify-left"/>
	<%elseif [{$:/state/fold-text/main}trim[]is[blank]] %>
		<$action-setfield $tiddler="$:/state/fold-text/main" text={{fold-text-default}} />
	<%else%>
		<$action-setfield $tiddler="$:/state/fold-text/main" text={{{ [!is[system]sort[title]]-[tag[fold-text]] -[fold-text[no]] +[before{$:/state/fold-text/main}] }}} />
	<%endif%>
上一节
</$button>
<$button tooltip="跳到下一节" aria-label="下一节" >
	<%if [{$:/state/fold-text/main}compare:number:gteq[1]] %>
		<$action-setfield $tiddler="$:/state/fold-text/main" text={{{ [!is[system]sort[title]]-[tag[fold-text]] -[fold-text[no]] +[after{$:/state/fold-text/main}] }}} />
	<%else%>
		<$action-sendmessage $message="tm-notify" $param="fold-text-button-notify-right"/>
	<%endif%>
下一节 
</$button>